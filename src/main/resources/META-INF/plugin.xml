<idea-plugin>
    <id>idea-plugin.kotlin-process</id>
    <name>KotlinProcessPlugin</name>
    <vendor url="http://www.jetbrains.com">JetBrains</vendor>

    <depends>com.github.jk1.ytplugin</depends>
    <depends>Git4Idea</depends>
    <depends>org.jetbrains.plugins.github</depends>
    <depends>com.intellij.tasks</depends>

    <actions>
        <action id="org.jetbrains.kotlin.process.plugin.rr.action.RemoteRunStopAction"
                class="org.jetbrains.kotlin.process.plugin.rr.action.RemoteRunStopAction" text="Stop Remote Run"/>

        <action id="org.jetbrains.kotlin.process.plugin.rr.action.RemoteRunStartAction"
                class="org.jetbrains.kotlin.process.plugin.rr.action.RemoteRunStartAction" text="Start Remote Run"/>

        <action id="org.jetbrains.kotlin.process.plugin.rr.action.RemoteRunSettingsAction"
                class="org.jetbrains.kotlin.process.plugin.rr.action.RemoteRunSettingsAction" text="Settings"/>

        <action id="org.jetbrains.kotlin.process.plugin.merge.action.MergeAction"
                class="org.jetbrains.kotlin.process.plugin.merge.action.MergeAction" text="Merge to Master"/>

        <action id="org.jetbrains.kotlin.process.plugin.issue.action.TicketAction"
                class="org.jetbrains.kotlin.process.plugin.issue.action.TicketAction" text="Ticket"/>

        <action id="org.jetbrains.kotlin.process.plugin.pullRequest.action.PullRequestAction"
                class="org.jetbrains.kotlin.process.plugin.pullRequest.action.PullRequestAction"
                text="Pull Request"
                description="Create pull request from current branch"/>
    </actions>

    <extensions defaultExtensionNs="com.intellij">
        <toolWindow id="Kotlin Process" secondary="true" anchor="bottom"
                    factoryClass="org.jetbrains.kotlin.process.plugin.KotlinProcessToolWindow" icon="/icon/kotlin.svg"/>
    </extensions>
</idea-plugin>
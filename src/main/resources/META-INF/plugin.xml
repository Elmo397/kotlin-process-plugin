<idea-plugin>
    <id>idea-plugin.kotlin-process</id>
    <name>KotlinProcessPlugin</name>
    <vendor url="http://www.jetbrains.com">JetBrains</vendor>

    <depends>com.github.jk1.ytplugin</depends>
    <depends>Git4Idea</depends>
    <depends>org.jetbrains.plugins.github</depends>

    <actions>
        <group id="KotlinProcessActionsGroup" text="Kotlin Process" popup="true">
            <add-to-group group-id="ToolsMenu" anchor="first"/>
            <action id="org.jetbrains.kotlin.process.plugin.actions.RemoteRunAction"
                    class="org.jetbrains.kotlin.process.plugin.actions.RemoteRunAction" text="Start Remote Run Check">
                <add-to-group group-id="KotlinProcessActionsGroup" anchor="first"/>
                <keyboard-shortcut first-keystroke="control alt R" keymap="$default"/>
            </action>

            <action id="org.jetbrains.kotlin.process.plugin.actions.TicketAction"
                    class="org.jetbrains.kotlin.process.plugin.actions.TicketAction" text="Ticket">
                <add-to-group group-id="KotlinProcessActionsGroup" anchor="after"
                              relative-to-action="org.jetbrains.kotlin.process.plugin.actions.RemoteRunAction"/>
                <keyboard-shortcut first-keystroke="control alt I" keymap="$default"/>
            </action>

            <action id="org.jetbrains.kotlin.process.plugin.actions.PullRequestAction"
                    class="org.jetbrains.kotlin.process.plugin.actions.PullRequestAction" text="Pull Request"
                    description="Create pull request from current branch">
                <add-to-group group-id="KotlinProcessActionsGroup" anchor="after"
                              relative-to-action="org.jetbrains.kotlin.process.plugin.actions.TicketAction"/>
                <keyboard-shortcut first-keystroke="control alt P" keymap="$default"/>
            </action>
        </group>
    </actions>
</idea-plugin>
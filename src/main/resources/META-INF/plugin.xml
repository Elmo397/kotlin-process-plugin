<idea-plugin>
    <id>idea-plugin.kotlin-process</id>
    <name>KotlinProcessPlugin</name>
    <vendor url="http://www.jetbrains.com">JetBrains</vendor>

    <depends>com.github.jk1.ytplugin</depends>
    <depends>Git4Idea</depends>
    <depends>org.jetbrains.plugins.github</depends>

    <actions>
        <group id="KotlinProcessActionsGroup" text="Kotlin Process" popup="true">
            <action id="org.jetbrains.kotlin.process.plugin.actions.issue.TicketAction"
                    class="org.jetbrains.kotlin.process.plugin.actions.issue.TicketAction" text="Ticket">
                <add-to-group group-id="KotlinProcessActionsGroup" anchor="first"/>
                <keyboard-shortcut first-keystroke="control alt shift I" keymap="$default"/>
            </action>

            <action id="org.jetbrains.kotlin.process.plugin.actions.pullRequest.PullRequestAction"
                    class="org.jetbrains.kotlin.process.plugin.actions.pullRequest.PullRequestAction" text="Pull Request"
                    description="Create pull request from current branch">
                <add-to-group group-id="KotlinProcessActionsGroup" anchor="after"
                              relative-to-action="org.jetbrains.kotlin.process.plugin.actions.issue.TicketAction"/>
                <keyboard-shortcut first-keystroke="control alt shift P" keymap="$default"/>
            </action>
        </group>

        <group id="RemoteRunGroup" popup="true">
            <add-to-group group-id="ToolWindowsGroup" anchor="last"/>
            <action id="org.jetbrains.kotlin.process.plugin.actions.rr.RemoteRunStopAction"
                    class="org.jetbrains.kotlin.process.plugin.actions.rr.RemoteRunStopAction" text="Stop Remote Run">
                <add-to-group group-id="RemoteRunGroup" anchor="first"/>
            </action>

            <action id="org.jetbrains.kotlin.process.plugin.actions.rr.RemoteRunStartAction"
                    class="org.jetbrains.kotlin.process.plugin.actions.rr.RemoteRunStartAction" text="Start Remote Run">
                <add-to-group group-id="RemoteRunGroup" anchor="after"
                              relative-to-action="org.jetbrains.kotlin.process.plugin.actions.rr.RemoteRunStopAction"/>
            </action>

            <action id="org.jetbrains.kotlin.process.plugin.actions.rr.RemoteRunSettingsAction"
                    class="org.jetbrains.kotlin.process.plugin.actions.rr.RemoteRunSettingsAction" text="Settings">
                <add-to-group group-id="RemoteRunGroup" anchor="after"
                              relative-to-action="org.jetbrains.kotlin.process.plugin.actions.rr.RemoteRunStartAction"/>
            </action>
        </group>
    </actions>

    <extensions defaultExtensionNs="com.intellij">
        <toolWindow id="Remote Run" secondary="true" anchor="bottom"
                    factoryClass="org.jetbrains.kotlin.process.plugin.ui.rr.RemoteRunToolWindow"/>
    </extensions>
</idea-plugin>